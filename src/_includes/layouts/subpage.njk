{% extends "layouts/_base-shared.njk" %}

{% block pageHeader %}
{% if showPageHeader %}
<!-- Page Header -->
<section class="page-header py-5 bg-light">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-8">
        {% if breadcrumbs %}
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            {% for crumb in breadcrumbs %}
            <li class="breadcrumb-item{% if loop.last %} active{% endif %}"{% if loop.last %} aria-current="page"{% endif %}>
              {% if crumb.url and not loop.last %}
                <a href="{{ crumb.url }}" class="text-decoration-none">{{ crumb.title }}</a>
              {% else %}
                {{ crumb.title }}
              {% endif %}
            </li>
            {% endfor %}
          </ol>
        </nav>
        {% endif %}
        <h1 class="page-title display-4 fw-bold text-primary mb-3">{{ pageTitle or title }}</h1>
        {% if subtitle %}
        <p class="lead text-muted">{{ subtitle }}</p>
        {% endif %}
      </div>
      {% if headerImage %}
      <div class="col-lg-4 text-lg-end">
        <img
          src="{{ headerImage.src }}"
          alt="{{ headerImage.alt }}"
          class="img-fluid rounded-circle shadow"
        />
      </div>
      {% endif %}
    </div>
  </div>
</section>
{% endif %}
{% endblock %}
