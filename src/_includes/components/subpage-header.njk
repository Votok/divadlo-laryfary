<!-- Subpage Header Component -->
{% if breadcrumbs %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    {% for crumb in breadcrumbs %}
    <li class="breadcrumb-item{% if loop.last %} active{% endif %}"{% if loop.last %} aria-current="page"{% endif %}>
      {% if crumb.url and not loop.last %}
        <a href="{{ crumb.url }}" class="text-decoration-none">{{ crumb.title }}</a>
      {% else %}
        {{ crumb.title }}
      {% endif %}
    </li>
    {% endfor %}
  </ol>
</nav>
{% endif %}
<h1 class="title-primary hero-title display-4 fw-bold mb-2">
  {{ pageTitle or title }}
</h1>
{% if subtitle %}
<p class="title-secondary hero-subtitle mb-4">
  {{ subtitle }}
</p>
{% endif %}
