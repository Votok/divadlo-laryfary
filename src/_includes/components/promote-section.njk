<!-- Reusable Promote Section Component -->
<!-- Usage: {% include "components/promote-section.njk", promoteImage: "images/your-image.jpg", promoteImageAlt: "Alt text", promoteTitle: "Title", promoteText: "Text content", promoteActions: true, quoteText: "Quote text" %} -->

<section class="promote-section">
  <div class="container-fluid p-0">
    <div class="row g-0 align-items-stretch">
      <!-- Image Column - Order 2 on mobile, 1 on desktop -->
      <div class="col-lg-6 order-2 order-lg-1">
        <div class="promote-image">
          <img
            src="{{ promoteImage | default('images/apolenka-modra.jpg') }}"
            alt="{{ promoteImageAlt | default('Divadlo Láryfáry') }}"
            class="img-fluid h-100 w-100"
            style="object-fit: cover"
          />
        </div>
      </div>
      <!-- Content Column - Order 1 on mobile, 2 on desktop -->
      <div class="col-lg-6 order-1 order-lg-2">
        <div class="promote-content d-flex flex-column h-100">
          <div class="content-box p-5 flex-grow-1 d-flex flex-column justify-content-center">
            {% if promoteTitle %}
              <h2 class="section-title mb-4">{{ promoteTitle }}</h2>
            {% endif %}
            {% if promoteText %}
              <div class="promote-text">
                {{ promoteText | safe }}
              </div>
            {% endif %}
            {% if promoteActions %}
              <div class="promote-actions">
                <a href="hrajeme.html" class="btn btn-primary btn-lg me-3 mb-2">Aktuální program</a>
                <a href="kontakt.html" class="btn btn-outline-primary btn-lg mb-2">Kontakt</a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    <!-- Quote strip spanning full width - Always last -->
    {% if quoteText %}
    <div class="row g-0">
      <div class="col-12">
        <div class="quote-box">
          <blockquote class="blockquote text-center mb-0">
            <p class="mb-0">
              {{ quoteText }}
            </p>
          </blockquote>
        </div>
      </div>
    </div>
    {% endif %}
  </div>
</section>
